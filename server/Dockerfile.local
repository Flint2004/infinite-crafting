# 使用支持构建工具的 Node.js 镜像（用于本地模型部署）
FROM node:20

# 安装必要的构建工具和依赖
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    cmake \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制 package.json 和 package-lock.json
COPY package*.json ./
COPY .npmrc ./

# 安装所有依赖（包括 optionalDependencies）
RUN npm install

# 复制源代码
COPY . .

# 创建数据目录和模型目录
RUN mkdir -p /app/data /app/models

# 暴露端口
EXPOSE 3000

# 启动应用
CMD ["npm", "start"]

